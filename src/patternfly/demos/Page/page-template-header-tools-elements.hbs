{{#> page-header-tools}}
  {{#> toolbar}}
    {{#> toolbar-group toolbar-group--modifier="pf-u-sr-only pf-u-visible-on-lg"}}
      {{#> toolbar-item}}
        {{#> button button--modifier="pf-m-plain" pagelayout-icon--bell="true" button--attribute='aria-label="Notifications"'}}
          {{> button-icon button-icon--type="bell"}}
        {{/button}}
      {{/toolbar-item}}
      {{#> toolbar-item}}
        {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Settings"'}}
          {{> button-icon button-icon--type="cog"}}
        {{/button}}
      {{/toolbar-item}}
    {{/toolbar-group}}
    {{#> toolbar-group}}
      {{#> toolbar-item toolbar-item--modifier="pf-u-hidden-on-lg pf-u-mr-0"}}
        {{#> button button--modifier="pf-m-plain" button--attribute='aria-label="Overflow actions"'}}
          {{> button-icon button-icon--type="ellipsis-v"}}
        {{/button}}
      {{/toolbar-item}}
      {{#> toolbar-item toolbar-item--modifier="pf-u-sr-only pf-u-visible-on-md"}}
        {{#> dropdown id=(concat page--id '-dropdown') dropdown-toggle--modifier="pf-m-plain" dropdown--HasToggleIcon="true"}}
          Kyle Baker
        {{/dropdown}}
      {{/toolbar-item}}
    {{/toolbar-group}}
  {{/toolbar}}
  {{#> avatar avatar--attribute='src="/assets/images/img_avatar.svg" alt="Avatar Image"'}}{{/avatar}}
{{/page-header-tools}}
